# Simple JSON grammar for tool calls
root   ::= object
value  ::= object | array | string | number | "true" | "false" | "null"
object ::= "{" ws (
    "\"tool_call\":" ws object_tool_call
)? ws "}"
object_tool_call ::= "{" ws (
    "\"name\":" ws string "," ws
    "\"arguments\":" ws object_args
) ws "}"
object_args ::= "{" ws (
    string ":" ws value ("," ws string ":" ws value)*
)? ws "}"
array  ::= "[" ws (
    value ("," ws value)*
)? ws "]"
string ::= "\"" (
    [^"\\] |
    "\\" (["\\/bfnrt] | "u" [0-9a-fA-F]{4})
)* "\"" ws
number ::= ("-")? ([0-9] | [1-9] [0-9]*) ("." [0-9]+)? ([eE] [-+]? [0-9]+)? ws
ws ::= ([ \t\n]*)
